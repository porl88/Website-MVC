@using MVC.Core.Configuration
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@*
    WRITING HTML FOR EMAILS:
    1. Use tables for layout.
    2. Use inline styles for formatting.
*@
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-gb">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title>@Website.Name | @ViewBag.Title</title>
</head>
<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" style="margin: 0; padding: 0;">
    <table cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td>
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td><p><strong>Please note:</strong> This e-mail was sent from a notification-only address that cannot accept incoming e-mail. Please do not reply to this message.</p></td>
        </tr>
    </table>
</body>
</html>
