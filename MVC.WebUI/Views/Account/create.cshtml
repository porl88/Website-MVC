@model MVC.WebUI.Models.Account.CreateAccountViewModel
@using MVC.Core.Configuration
@{
    ViewBag.Title = "Register";
    ViewBag.PageClass = "account-create";
}

<section>
    <h1>@Resources.FormLabels.CreateAccount</h1>

    <form class="form" action="@Url.Action()" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)
		<p>@Resources.FormLabels.RequiredMessage</p>
        <ol class="form-fields">
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { autocomplete = "username", autofocus = "autofocus", inputmode = "verbatim", maxlength = "30", minlength="2", pattern = RegularExpressions.UserName, required = "required", title = Resources.ValidationErrors.UserName })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { type = "email", autocomplete = "off", maxlength = "256", placeholder = "e.g. 'john.smith@example.com'", required = "required", size = "40" })
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { autocomplete = "off", minlength = "8", pattern = RegularExpressions.PasswordWeak, required = "required", title = Resources.ValidationErrors.Password })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.PasswordConfirm)
                @Html.PasswordFor(m => m.PasswordConfirm, new { autocomplete = "off", minlength = "8", pattern = RegularExpressions.PasswordWeak, required = "required", title = Resources.ValidationErrors.Password })
                @Html.ValidationMessageFor(m => m.PasswordConfirm)
            </li>
            <li>
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { autocomplete = "given-name", inputmode = "latin-name", maxlength = "30", minlength = "2", pattern = RegularExpressions.Name, required = "required", title = Resources.ValidationErrors.Name })
                @Html.ValidationMessageFor(m => m.FirstName)
            </li>
            <li>
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { autocomplete = "family-name", inputmode = "latin-name", maxlength = "50", minlength = "2", pattern = RegularExpressions.Name, required = "required", title = Resources.ValidationErrors.Name })
                @Html.ValidationMessageFor(m => m.LastName)
            </li>
        </ol>
        <button>@Resources.FormLabels.CreateAccount</button>
    </form>
</section>
